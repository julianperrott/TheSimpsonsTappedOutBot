<Window x:Class="TappedOut.Bot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TappedOut.Bot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Tap" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Tap_Click" />
        <Button Grid.Row="0" Content="Screenshot" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Screenshot_Click" Margin="100 0 0 0"/>
        <Button Grid.Row="0" Content="Screenshot Processor" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ScreenshotProcessor_Click" Margin="200 0 0 0" />
        <Button Grid.Row="0" Content="Timer" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Timer_Click" Margin="400 0 0 0" />
        <Image x:Name="screenshot" Grid.Row="2" Source="C:\Users\julian\Desktop\screenshot.png"></Image>
    </Grid>
</Window>
